<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.appnews.presentation.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment_to_newsInfoFragment"
            app:destination="@id/newsInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/savedNewsFragment"
        android:name="com.example.appnews.presentation.SavedNewsFragment"
        android:label="fragment_saved_news"
        tools:layout="@layout/fragment_saved_news" >
        <action
            android:id="@+id/action_savedNewsFragment_to_newsInfoFragment"
            app:destination="@id/newsInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsInfoFragment"
        android:name="com.example.appnews.presentation.NewsInfoFragment"
        android:label="fragment_news_info"
        tools:layout="@layout/fragment_news_info" >
        <argument
            android:name="selected_article"
            app:argType="com.example.appnews.data.model.Article" />
    </fragment>
</navigation>